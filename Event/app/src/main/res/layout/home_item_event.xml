<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recyclerview_item_space"
    android:layout_marginRight="@dimen/recyclerview_item_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_event_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_item_event_nickname"
                style="@style/NormalTextPrimaryStyle"
                android:layout_alignTop="@+id/iv_item_event_avatar"
                android:layout_toRightOf="@+id/iv_item_event_avatar"
                android:text="Nickname" />

            <TextView
                android:id="@+id/tv_item_event_datetime"
                style="@style/NormalTextSecondaryStyle"
                android:layout_alignBottom="@+id/iv_item_event_avatar"
                android:layout_toRightOf="@+id/iv_item_event_avatar"
                android:text="Just Now" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/default_photo" />

        <TextView
            android:id="@+id/tv_item_event_title"
            style="@style/NormalTextPrimaryStyle"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="A big event" />

        <TextView
            android:id="@+id/tv_item_event_description"
            style="@style/NormalTextSecondaryStyle"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="It Is A big event" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_plus" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_toLeftOf="@+id/iv_item_event_comment"
                android:src="@drawable/ic_like" />

            <ImageView
                android:id="@+id/iv_item_event_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_item_event_more"
                android:src="@drawable/ic_message" />

            <ImageView
                android:id="@+id/iv_item_event_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_dots_vertical" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>