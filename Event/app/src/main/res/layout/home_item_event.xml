<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/recyclerview_item_space"
    android:layout_marginRight="@dimen/recyclerview_item_space"
    android:background="@color/colorTextIcons"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_event_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_item_event_nickname"
            style="@style/NormalTextPrimaryStyle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item_event_avatar"
            android:text="Nickname" />

        <TextView
            android:id="@+id/tv_item_event_datetime"
            style="@style/NormalTextSecondaryStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin"
            android:text="Just Now" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_photo" />

        <TextView
            android:id="@+id/tv_item_event_title"
            style="@style/NormalTextPrimaryStyle"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/colorTextBackground"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/text_margin"
            android:text="A big event"
            android:textColor="@color/colorTextIcons" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_event_description"
        style="@style/NormalTextSecondaryStyle"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="It Is A big event" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:text="Hangzhou" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_toLeftOf="@+id/iv_item_event_comment"
            android:src="@drawable/ic_like" />

        <ImageView
            android:id="@+id/iv_item_event_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_item_event_more"
            android:src="@drawable/ic_message" />

        <ImageView
            android:id="@+id/iv_item_event_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:src="@drawable/ic_dots_vertical" />
    </RelativeLayout>

</LinearLayout>